<Page
    x:Class="Vitals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vitals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="5000" d:DesignHeight="5000"
    
>
    <Page.Background>
        <AcrylicBrush BackgroundSource="HostBackdrop"/>
    </Page.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="current_time" Grid.Row ="0" Grid.Column ="0" FontSize="50"  Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{x:Bind Path=current_time_val, Mode=OneWay}"/>
        </TextBlock>
        <TextBlock Name="heartrate" Grid.Row ="1" Grid.Column ="0" FontSize="100"  Foreground="{x:Bind Path=heartrate_color, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{x:Bind Path=heartrate_val, Mode=OneWay}"/>
            <Run Text="bpm" FontSize="40"/>
        </TextBlock>
        <TextBlock Name="blood_pressure" Grid.Row ="2" Grid.Column ="0" FontSize="100" Foreground="{x:Bind Path=blood_pressure_color, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{x:Bind Path=blood_pressure_val, Mode=OneWay}"/>
            <Run Text="mmHg" FontSize="40"/>
        </TextBlock>
        <TextBlock Name="oxygen_level" Grid.Row ="3" Grid.Column ="0" FontSize="100" Foreground="{x:Bind Path=oxygen_color, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{x:Bind Path=oxygen_val, Mode=OneWay}"/>
            <Run Text="%" FontSize="40"/>
        </TextBlock>
        <TextBlock Name="temperature" Grid.Row ="4" Grid.Column ="0" FontSize="100" Foreground="{x:Bind Path=temperature_color, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Run Text="{x:Bind Path=temperature_val, Mode=OneWay}"/>
            <Run Text="°F" FontSize="40"/>
        </TextBlock>
    </Grid>
</Page>
