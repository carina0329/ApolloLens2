<Page
    x:Class="Vitals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vitals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="3011.388" d:DesignHeight="1641.342"
    
>
    <Page.Background>
        <AcrylicBrush BackgroundSource="HostBackdrop"/>
    </Page.Background>
    <StackPanel Margin="20">
        <StackPanel>
            <Button Content="Start" 
            Click="OnClickHandler"/>
            <TextBlock x:Name="textBlock1"/>
        </StackPanel>
        <TextBlock Name="heartrate" TextWrapping="Wrap" FontSize="100"  Foreground="#FFC200CB">
            <Run Text="{Binding heartrate_val}"/>
            <Run Text="bpm" FontSize="20"/>
        </TextBlock>
        <TextBlock Name="blood_pressure" TextWrapping="Wrap" FontSize="100" Foreground="#FFF39320">
            <Run Text="{Binding blood_pressure_val}"/>
            <Run Text="mmHg" FontSize="20"/>
        </TextBlock>
        <TextBlock Name="oxygen_level" TextWrapping="Wrap" FontSize="100" Foreground="#FF2ED813">
            <Run Text="{Binding oxygen_val}"/>
            <Run Text="%" FontSize="20"/>
        </TextBlock>
        <TextBlock Name="temperature" TextWrapping="Wrap" FontSize="100" Foreground="#FF0CA5DE">
            <Run Text="{Binding temperature_val}"/>
            <Run Text="°F" FontSize="20"/>
        </TextBlock>
    </StackPanel>
</Page>
